---
import TOCHeading from '@components/TOCHeading.astro';

const { headings } = Astro.props;

// Filter out sr-only headings (e.g. footnotes)
const filtered = headings.filter((h: any) => !h.slug.includes('footnote-label'));
const toc = buildHierarchy(filtered);

function buildHierarchy(headings: any) {
  const toc: any[] = [];
  const parentHeadings = new Map();
  
  if (!headings)
    return toc;
  
  headings.forEach((h: any) => {
    const heading = { ...h, subheadings: [] };
    parentHeadings.set(heading.depth, heading);
    // Change 2 to 1 if your markdown includes your <h1>
    if (heading.depth === 2) {
      toc.push(heading);
    } else {
      parentHeadings.get(heading.depth - 1).subheadings.push(heading);
    }
  });
  return toc;
}
---
{toc && toc.length > 0 && (
  <h2>Table of Content</h2>
  <nav class="toc">
    <ul>
      {toc.map((heading) => (
        <TOCHeading heading={heading} />
      ))}
    </ul>
  </nav>
)}